<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trkj.dao.liucz2.PtCoachMapper">

    <resultMap id="BaseResultMap" type="com.trkj.entity.liucz2.PtCoach">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="ptId" column="pt_id" jdbcType="BIGINT"/>
            <result property="empId" column="emp_id" jdbcType="BIGINT"/>
        <collection property="ptMeals" column="pt_id" resultMap="BaseResultMap2"/>
    </resultMap>
    <resultMap id="BaseResultMap2" type="com.trkj.entity.liucz2.PtMeal">
        <id property="ptId" column="pt_id" jdbcType="BIGINT"/>
        <result property="ptTime" column="pt_time" jdbcType="VARCHAR"/>
        <result property="ptDate" column="pt_date" jdbcType="TIMESTAMP"/>
        <result property="ptPrice" column="pt_price" jdbcType="BIGINT"/>
        <result property="ptIs" column="pt_is" jdbcType="TINYINT"/>
        <result property="ptName" column="pt_name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,pt_id,emp_id
    </sql>
    <select id="findPtMeamByCoachId" resultMap="BaseResultMap">
        select m.* from pt_coach c inner join pt_meal m on c.pt_id=m.pt_id where c.emp_id=#{query.empId}
        <if test="query.ptName !=null and query.ptName !='' ">
                and m.pt_name =#{query.ptName}
        </if>
    </select>
</mapper>
