<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trkj.dao.UserAndEmpMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.trkj.vo.query.UserQueryVo">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="department_name" property="departmentName" />
        <result column="emp_name" property="empName" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, department_name
    </sql>
    <select id="selectXmlPage" resultType="com.trkj.vo.query.UserQueryVo">
        select u.id,u.username  ,e.department_name ,e.emp_name  from sys_user u inner join sys_emp e on u.emp_id=e.emp_id where 1=1
        <!-- 条件参数 -->
        <if test="query.username != '' and query.username != null">
            and u.username like "%"#{query.username}"%"
        </if>

    </select>

    <select id="selectXmlPage2" resultType="com.trkj.vo.query.UserQueryVo">
        select u.id,u.username  ,e.department_name ,e.emp_name  from sys_user u inner join sys_emp e on u.emp_id=e.emp_id where 1=1
        <!-- 条件参数 -->
        <if test="query.username != '' and query.username != null">
            and u.username like "%"#{query.username}"%"
        </if>

    </select>


</mapper>
